<div
  class="modal fade"
  id="webmaker-login-new-user"
  tabindex="-1"
  role="dialog"
  aria-labelledby="createNewWebmakerUser"
  aria-hidden="true">

  <div class="modal-backdrop"></div>

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title"><%= gettext("webmakerAuthWelcome") %></h3>
      </div>
      <div class="modal-body">
        <form class="form">
          <div class="form-group username-group">
            <div class="row">
              <div class="col-sm-6">
                <label for="username"><%= gettext("webmakerAuthChooseUsername") %></label>
              </div>
              <div class="col-sm-6">
                <input name="username" class="form-control" required>
                <span class="help-block username-taken-error hidden"><%= gettext("webmakerAuthTakenError") %></span>
                <span class="help-block username-required-error hidden"><%= gettext("webmakerAuthUsernameRequiredError") %></span>
                <span class="help-block username-invalid-error hidden"><%= gettext("webmakerAuthUsernameInvalid") %></span>
              </div>
            </div>
          </div>
          <div class="checkbox">
            <label>
              <input name="mailingList" type="checkbox"> <%= gettext("webmakerAuthMailingList") %>
            </label>
          </div>
          <div class="checkbox form-group agree-group">
            <label>
              <input name="agreeToTerms" type="checkbox"> <%- gettext("webmakerAuthAgreeToTerms") %>
            </label>
            <span class="help-block agree-error hidden">
              <%= gettext("webmakerAuthAgreeError") %>
            </span>
          </div>
          <label><%= gettext("Language Preference") %></label>
          <% include ../../webmaker-language-picker/template/supportedLanguages %>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= gettext("Cancel") %></button>
        <button class="create-user btn btn-primary" type="button"><%= gettext("webmakerAuthCreateAccount") %></button>
      </div>
    </div>
  </div>
</div>
